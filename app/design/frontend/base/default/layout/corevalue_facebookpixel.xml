<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <block type="core/template" template="facebookpixel/visitor.phtml"/>
        </reference>
    </default>
    <checkout_onepage_success translate="label">
        <reference name="head">
            <block type="core/template" template="facebookpixel/purchase.phtml"/>
        </reference>
    </checkout_onepage_success>
    <checkout_onepage_index>
        <reference name="head">
            <block type="core/template" template="facebookpixel/checkout.phtml"/>
        </reference>
    </checkout_onepage_index>
    <catalog_product_view>
        <reference name="head">
            <block type="core/template" template="facebookpixel/view.phtml"/>
            <block type="core/template" template="facebookpixel/addtocart.phtml"/>
        </reference>
    </catalog_product_view>
    <checkout_cart_index>
        <reference name="head">
            <block type="core/template" template="facebookpixel/addtocart.phtml"/>
        </reference>
    </checkout_cart_index>
    <wishlist_index_index>
        <reference name="head">
            <block type="core/template" template="facebookpixel/addtocart.phtml"/>
            <block type="core/template" template="facebookpixel/addtowishlist.phtml"/>
        </reference>
    </wishlist_index_index>
    <catalogsearch_result_index>
        <reference name="head">
            <block type="core/template" template="facebookpixel/search.phtml"/>
        </reference>
    </catalogsearch_result_index>

    <checkout_onepage_review>
        <reference name="checkout.onepage.review.info.items.before">
            <block type="core/template" name="add.payment.info" template="facebookpixel/addpaymentinfo.phtml" />
        </reference>
    </checkout_onepage_review>

    <checkout_onepage_additional>
        <reference name="root">
            <block type="core/template" name="customer.edit.address.info" output="toHtml" template="facebookpixel/customer-edit-address.phtml" />
        </reference>
    </checkout_onepage_additional>

    <customer_address_index>
        <reference name="address_book">
            <block type="core/template" name="customer.edit.address.info" output="toHtml" template="facebookpixel/customer-edit-address.phtml" />
        </reference>
    </customer_address_index>
</layout>
